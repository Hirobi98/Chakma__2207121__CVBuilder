<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true" styleClass="root" stylesheets="@welcome_page.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cv.HelloController">
    <content>
        <VBox alignment="CENTER" styleClass="input-section-vbox">
            <children>
                <Label styleClass="title-label" text="CV Data Input" />
                <VBox spacing="10.0">
                    <children>
                        <Label text="Personal Information" />
                        <TextField fx:id="fullNameField" promptText="Full Name (MANDATORY)" />
                        <TextField fx:id="emailField" promptText="Email Address (MANDATORY)" />
                        <TextField fx:id="phoneField" promptText="Phone Number" />
                        <TextField fx:id="addressField" promptText="Address / Location (e.g., London, UK)" />
                    </children>
                </VBox>
                <Separator />
                <VBox spacing="10.0">
                    <children>
                        <Label text="Projects Summary" />
                        <TextArea fx:id="projectsTextArea" prefHeight="100.0" promptText="Describe relevant projects or professional summary" wrapText="true" />
                    </children>
                </VBox>
                <Separator />
                <VBox spacing="10.0">
                    <children>
                        <Label text="Work Experience" />
                        <TextArea fx:id="workExperienceTextArea" prefHeight="150.0" promptText="Use double newlines (&#10;&#10;) to separate entries.&#10;Example:&#10;Job Title, Company | Year Range&#10;â€¢ Key achievement 1" wrapText="true" />
                    </children>
                </VBox>
                <Separator />
                <VBox spacing="10.0">
                    <children>
                        <Label text="Educational Qualifications" />
                        <TextArea fx:id="educationTextArea" prefHeight="100.0" promptText="Use double newlines (&#10;&#10;) to separate entries.&#10;Example:&#10;Degree Name, Institution&#10;Year (e.g., 2018 - 2022)" wrapText="true" />
                    </children>
                </VBox>
                <Separator />
                <VBox spacing="10.0">
                    <children>
                        <Label text="Skills Summary" />
                        <TextArea fx:id="skillsTextArea" prefHeight="80.0" promptText="List your skills separated by commas or newlines (e.g., Python, SQL, AWS, Figma, SEO)" wrapText="true" />
                    </children>
                </VBox>

                <!-- ADDED HBox for action buttons (Save/Generate and Delete) -->
                <HBox alignment="CENTER" spacing="20">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                    <Button onAction="#generateCvFileAndSwitch" styleClass="button" text="SAVE &amp; PREVIEW CV" />

                </HBox>

            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
        </VBox>
    </content>
</ScrollPane>