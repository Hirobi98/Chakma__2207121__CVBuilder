<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" styleClass="root" stylesheets="@welcome_page.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cv.HelloController">
    <children>
        <Label styleClass="title-label" text="Manage CV Entry" />
        <Label style="-fx-text-fill: white; -fx-font-size: 16px;" text="Enter the Full Name and Email of the CV you wish to manage." />

        <VBox maxWidth="350.0" spacing="10.0">
            <children>
                <TextField fx:id="manageFullNameField" promptText="Full Name (Key)" />
                <TextField fx:id="manageEmailField" promptText="Email Address (Key)" />
            </children>
        </VBox>

        <VBox alignment="CENTER" spacing="10.0">
            <Button style="-fx-background-color: #E74C3C;" styleClass="button" text="DELETE CV DATA" />
            <Button styleClass="button" text="Update CV DATA" />
        </VBox>
      <Button mnemonicParsing="false" text="See you saved CV" />

        <Button onAction="#switch_to_scene1" styleClass="button" text="Back to Home">
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </Button>
    </children>
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>
</VBox>
