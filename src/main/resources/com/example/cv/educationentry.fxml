<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="5" styleClass="entry-container" stylesheets="@welcome_page.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <Label styleClass="cv-body-text" text="Degree/Course:" />
    <TextField fx:id="degreeField" promptText="e.g., M.Sc. Computer Science" styleClass="text-field" />
    <Label styleClass="cv-body-text" text="Institution:" />
    <TextField fx:id="institutionField" promptText="e.g., University of Dhaka" styleClass="text-field" />
    <Label styleClass="cv-body-text" text="Date/Year:" />
    <TextField fx:id="educationDateField" promptText="2020 - 2022" styleClass="text-field" />

    <Button styleClass="small-add-button" text="Add" />
</VBox>
